---
interface Props {
  date: Date
  class?: string
}

const { date, class: className } = Astro.props
---

<time datetime={date.toISOString()} class={className}>
  {
    date.toLocaleDateString('en-GB', {
      weekday: 'long',
      day: 'numeric',
      month: 'long',
      year: 'numeric'
    })
  }
</time>
